<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}HireFlow - Recruitment System{% endblock %}</title>
        <!-- Bootstrap CSS (your partner will add this) -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        {% block stylesheets %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </head>
    <body>
        <!-- Header -->
        <header class="main-header">
            <div class="container">
                <div class="logo">
                    <h1>üè¢ HireFlow</h1>
                </div>
                <nav class="main-nav">
                    {% if app.user %}
                        <span class="user-info">
                            Welcome, <strong>{{ app.user.fullName }}</strong>
                            ({{ app.user.roles[0]|replace({'ROLE_': ''}) }})
                        </span>
                        <a href="{{ path('app_logout') }}" class="btn-logout">Logout</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn-login">Login</a>
                        <a href="{{ path('app_register') }}" class="btn-register">Register</a>
                    {% endif %}
                </nav>
            </div>
        </header>

        <!-- Flash Messages -->
        <div class="flash-messages">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
            {% for message in app.flashes('warning') %}
                <div class="alert alert-warning">{{ message }}</div>
            {% endfor %}
        </div>

        <!-- Main Content -->
        <main>
            {% block body %}{% endblock %}
        </main>

        <!-- Footer -->
        <footer class="main-footer">
            <div class="container">
                <p>¬© 2025 HireFlow - Recruitment Management System | Symfony Project</p>
            </div>
        </footer>

        <!-- Bootstrap JS (your partner will add this) -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
